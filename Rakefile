# Rakefile
require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('animoto_quickstart_upload_client', '0.0.1') do |p|
  p.description    = "Ruby client to interface with the Animoto Quickstart Upload API."
  p.url            = "http://github.com/SunDawg/animoto_quickstart_upload_client-ruby"
  p.author         = "Christopher Sun"
  p.email          = "christopher.sun@gmail.com"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.development_dependencies = ['mocha']
end
